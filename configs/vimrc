set number
set mouse=a
set hlsearch
set incsearch 
set wrap
set autoindent
set cursorline 
set cursorlineopt=number
filetype indent on
syntax enable
colorscheme slate
highlight CursorLineNr ctermfg=White ctermbg=DarkMagenta cterm=NONE
highlight LineNr ctermfg=DarkMagenta ctermbg=NONE
highlight Comment ctermfg=DarkRed
highlight NonText ctermbg=Black ctermfg=Green
highlight Search ctermbg=Black ctermfg=Red
highlight Visual cterm=NONE ctermbg=DarkGray ctermfg=Magenta
highlight MatchParen cterm=NONE ctermbg=Black ctermfg=Red
